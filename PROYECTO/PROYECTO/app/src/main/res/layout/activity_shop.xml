<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstrainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageArmadura"
        android:layout_width="152dp"
        android:layout_height="148dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/armadura" />

    <ImageView
        android:id="@+id/imageCuchillo"
        android:layout_width="169dp"
        android:layout_height="138dp"
        android:layout_marginBottom="316dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/knife" />

    <ImageView
        android:id="@+id/imagePocion"
        android:layout_width="140dp"
        android:layout_height="137dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="316dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/potion" />

    <ImageView
        android:id="@+id/imageEspada"
        android:layout_width="151dp"
        android:layout_height="143dp"
        android:layout_marginBottom="588dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/sword" />

    <TextView
        android:id="@+id/textViewArmadura"
        android:layout_width="155dp"
        android:layout_height="42dp"
        android:text="Armadura: 175 coins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageArmadura" />

    <TextView
        android:id="@+id/textViewCuchillo"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:text="Cuchillo: 154 coins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCuchillo" />

    <TextView
        android:id="@+id/textViewPocion"
        android:layout_width="145dp"
        android:layout_height="31dp"
        android:text="Pocion: 34 coins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePocion" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:text="Espada: 4896 coins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageEspada" />

</androidx.constraintlayout.widget.ConstraintLayout>